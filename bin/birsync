#!/usr/bin/env bash
watcheddir=$1
rsyncdest=$2
rsync_opts=( "-av" "--delete" "--quiet" "--ignore-errors" )
ignore='(\.swp|\.tmp|\.git|\~)'

sync () {
    date "+%H:%M:%S:%3N Syncing..."
    /usr/bin/rsync "${rsync_opts[@]}" --exclude=**/.* --exclude=**/*.tmp $watcheddir $rsyncdest | grep /usr/bin/grep 'WARNING' &> /dev/null
    if [ $? == 0 ]; then
        date "+%H:%M:%S:%3N Sync failed, retrying..."
        sync &
    fi
}

watcher () {
    if /usr/bin/inotifywait -qq -r -e CREATE,DELETE,MODIFY --excludei "$ignore" "$watcheddir"; then
        sync &
    fi
}

sync &

while watcher; do
    :
done

